# Staging Environment Configuration Template
# Copy this file to .env.staging and customize with your staging values

NODE_ENV=production
APP_ENV=staging

# Core Application Configuration
NEXT_PUBLIC_APP_URL=https://staging.streamvault.app
NEXT_PUBLIC_APP_NAME=StreamVault (Staging)
NEXT_PUBLIC_DEBUG_MODE=false

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-staging-gcp-project-id
GCS_BUCKET_NAME=your-staging-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json
GCS_SERVICE_ACCOUNT_EMAIL=your-service-account@your-staging-project.iam.gserviceaccount.com

# Clerk Authentication (Staging)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_staging_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_staging_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Firebase Configuration (Staging)
FIREBASE_PROJECT_ID=your-firebase-project-staging
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-staging-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project-staging.iam.gserviceaccount.com
NEXT_PUBLIC_FIREBASE_API_KEY=your-staging-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-staging.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-staging
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-staging.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:your-staging-app-id

# Stripe Payment Configuration (Test Mode for Staging)
STRIPE_SECRET_KEY=sk_test_your_staging_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_staging_webhook_secret
STRIPE_BASIC_PRICE_ID=price_your_staging_basic_price_id
STRIPE_PREMIUM_PRICE_ID=price_your_staging_premium_price_id
STRIPE_PRO_PRICE_ID=price_your_staging_pro_price_id

# Streaming Infrastructure (Staging)
STREAMING_DOMAIN=stream-staging.streamvault.app
RTMP_INGEST_URL=rtmp://ingest-staging.streamvault.app/live
HLS_DELIVERY_URL=https://cdn-staging.streamvault.app/hls
CDN_BASE_URL=https://cdn-staging.streamvault.app

# Security Configuration (Staging - Use strong secrets)
JWT_SECRET=staging-jwt-secret-that-is-at-least-32-characters-long-for-security
ENCRYPTION_KEY=stag12345678901234567890123456789  # Exactly 32 characters
WEBHOOK_SECRET=staging-webhook-secret-123

# Feature Flags (Staging)
ENABLE_AI_FEATURES=true
ENABLE_WHITE_LABEL=true
ENABLE_ANALYTICS=true
ENABLE_PWA=true
ENABLE_OFFLINE_DOWNLOADS=true# 
Staging Configuration
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true

# Database Configuration (Required in Staging)
DATABASE_URL=postgresql://username:password@staging-host:5432/streamvault_staging
REDIS_URL=redis://username:password@staging-host:6379

# Rate Limiting (Staging)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Content Delivery (Staging)
MAX_FILE_SIZE=2147483648  # 2GB for staging
ALLOWED_FILE_TYPES=mp4,mov,avi,mkv,webm
THUMBNAIL_SIZES=320x180,640x360,1280x720

# Optional Services for Staging
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/your-staging-project-id
ANALYTICS_ID=G-STAGING-your-analytics-id