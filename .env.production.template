# Production Environment Configuration Template
# Copy this file to .env.production and customize with your production values
# DO NOT commit this file to version control with real values

NODE_ENV=production
APP_ENV=production

# Core Application Configuration
NEXT_PUBLIC_APP_URL=https://streamvault.app
NEXT_PUBLIC_APP_NAME=StreamVault
NEXT_PUBLIC_DEBUG_MODE=false

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-production-gcp-project-id
GCS_BUCKET_NAME=your-production-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json
GCS_SERVICE_ACCOUNT_EMAIL=your-service-account@your-production-project.iam.gserviceaccount.com

# Clerk Authentication (Production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_production_clerk_publishable_key
CLERK_SECRET_KEY=sk_live_your_production_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Firebase Configuration (Production)
FIREBASE_PROJECT_ID=your-firebase-project-prod
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-production-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project-prod.iam.gserviceaccount.com
NEXT_PUBLIC_FIREBASE_API_KEY=your-production-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-prod.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-prod
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-prod.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:your-production-app-id

# Stripe Payment Configuration (Live Mode)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret
STRIPE_BASIC_PRICE_ID=price_your_production_basic_price_id
STRIPE_PREMIUM_PRICE_ID=price_your_production_premium_price_id
STRIPE_PRO_PRICE_ID=price_your_production_pro_price_id

# Streaming Infrastructure (Production)
STREAMING_DOMAIN=stream.streamvault.app
RTMP_INGEST_URL=rtmp://ingest.streamvault.app/live
HLS_DELIVERY_URL=https://cdn.streamvault.app/hls
CDN_BASE_URL=https://cdn.streamvault.app

# Cloudflare Configuration (Required in Production)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Security Configuration (Production - Use strong, unique secrets)
JWT_SECRET=your-production-jwt-secret-that-is-very-long-and-secure-with-random-characters
ENCRYPTION_KEY=your32characterencryptionkeyhere  # Exactly 32 characters - CHANGE THIS
WEBHOOK_SECRET=your-production-webhook-secret-with-high-entropy

# Feature Flags (Production)
ENABLE_AI_FEATURES=true
ENABLE_WHITE_LABEL=true
ENABLE_ANALYTICS=true
ENABLE_PWA=true
ENABLE_OFFLINE_DOWNLOADS=true

# Production Configuration
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true

# Database Configuration (Required in Production)
DATABASE_URL=postgresql://username:password@host:5432/streamvault_prod
REDIS_URL=redis://username:password@host:6379

# AI Services Configuration
OPENAI_API_KEY=sk-your-production-openai-key
GOOGLE_AI_API_KEY=your-production-google-ai-key
CONTENT_MODERATION_API_KEY=your-production-content-moderation-key

# Third-party Integrations (Required in Production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
ANALYTICS_ID=G-your-analytics-id
HOTJAR_ID=your-hotjar-id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@streamvault.app
SMTP_PASS=your-smtp-password

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Content Delivery (Production)
MAX_FILE_SIZE=5368709120  # 5GB
ALLOWED_FILE_TYPES=mp4,mov,avi,mkv,webm
THUMBNAIL_SIZES=320x180,640x360,1280x720,1920x1080

# Monitoring and Logging (Production)
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
PROMETHEUS_ENDPOINT=http://prometheus:9090